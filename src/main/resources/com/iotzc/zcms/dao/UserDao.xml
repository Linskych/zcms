<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iotzc.zcms.dao.UserDao">
  <resultMap id="BaseResultMap" type="com.iotzc.zcms.model.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="nick_name" jdbcType="VARCHAR" property="nickName" />
    <result column="real_name" jdbcType="VARCHAR" property="realName" />
    <result column="phone" jdbcType="VARCHAR" property="phone" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="salt" jdbcType="VARCHAR" property="salt" />
    <result column="open_id" jdbcType="VARCHAR" property="openId" />
    <result column="status" jdbcType="TINYINT" property="status" />
  </resultMap>
  
  <sql id="columns">
    u.nick_name,
    u.real_name,
    u.phone, 
    u.password,
    u.salt,
    u.open_id,
    u.status
  </sql>
  
  <delete id="deleteBy">
    update tbl_user
    set
        status = 1
    <where>
        <choose>
            <when test="id == null and phone == null and openid == null">
                id = 0
            </when>
            <otherwise>
                <if test="id != null">
                    and id = #{id}
                </if>
                <if test="phone != null and phone.trim() != ''">
                    and phone = #{phone}
                </if>
                <if test="openId != null and openId.trim() != ''">
                    and open_id = #{openId}
                </if>
            </otherwise>
        </choose>
    </where>
  </delete>
  
  <insert id="insert">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into tbl_user 
    (
        <if test="nickName != null and nickName.trim() != ''">
            nick_name,
        </if>
        <if test="realName != null and realName.trim() != ''">
            real_name,
        </if>
        phone,
        <if test="password != null and password.trim() != ''">
            password,
        </if>
        <if test="salt != null and salt.trim() != ''">
            salt,
        </if>
        <if test="openId != null and openId.trim() != ''">
            open_id,
        </if>
        status
    )
    values
    (
        <if test="nickName != null and nickName.trim() != ''">
            #{nickName},
        </if>
        <if test="realName != null and realName.trim() != ''">
            #{realName},
        </if>
        #{phone},
        <if test="password != null and password.trim() != ''">
            #{password},
        </if>
        <if test="salt != null and salt.trim() != ''">
            #{salt},
        </if>
        <if test="openId != null and openId.trim() != ''">
            #{openId},
        </if>
        #{status}
    )
  </insert>
  
  <update id="update">
    update tbl_user
    set
        nick_name = #{nickName},
        real_name = #{realName},
        phone = #{phone},
        password = #{password},
        salt = #{salt},
        open_id = #{openId},
        status = #{status}
    where
        id = #{id}
  </update>
  
  <select id="select" resultType="com.iotzc.zcms.model.User">
    select
        id,
        nick_name,
        real_name,
        phone,
        password,
        salt,
        open_id,
        status
    from
        tbl_user
    <where>
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="phone != null and phone.trim() != ''">
            and phone = #{phone}
        </if>
        <if test="openId != null and openId.trim() != ''">
            and open_id = #{openId}
        </if>
    </where>
  </select>
  
  <select id="selectAll" resultMap="BaseResultMap">
    select
        id,
        nick_name,
        real_name,
        phone,
        password,
        salt,
        open_id,
        status
    from
        tbl_user
    <where>
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="phone != null and phone.trim() != ''">
            and phone = #{phone}
        </if>
        <if test="openId != null and openId.trim() != ''">
            and open_id = #{openId}
        </if>
        <if test="nickName != null and nickName.trim() != ''">
            and nick_name = #{nickName}
        </if>
        <if test="realName != null and realName.trim() != ''">
            and real_name = #{realName}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
    </where>
  </select>
</mapper>